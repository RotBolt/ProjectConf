<resources>
    <!-- Base application theme. -->
    <style name="Theme.ProjectConf" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/teal200</item>

        <item name="fontFamily">@font/nova_round</item>
        <item name="homeAsUpIndicator">@drawable/ic_close</item>

        <item name="baseThemeColor">@android:color/white</item>
        <item name="baseThemeComplimentColor">@android:color/black</item>
        <item name="android:textColor">?attr/baseThemeComplimentColor</item>
        <item name="shimmerColor">@color/greyShimmerLight</item>
        <item name="shadeGrey">@color/grey500</item>
    </style>


    <style name="AppModalStyle" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_bg</item>
    </style>

</resources>