<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvEventPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="May, 2020" />

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:background="@color/yellow700"
        app:layout_constraintEnd_toEndOf="@+id/tvEventPeriod"
        app:layout_constraintStart_toStartOf="@+id/tvEventPeriod"
        app:layout_constraintTop_toBottomOf="@+id/tvEventPeriod"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>